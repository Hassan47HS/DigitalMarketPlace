@model sellProduct

@{
    ViewData["Title"] = "Product Details";
    var images = Model.ImagePath.Split(','); // Split the comma-separated image paths
}

<div class="container">
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <p>Price: @Model.Price</p>

    <!-- Image Slider -->
    <div id="productImagesCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (var i = 0; i < images.Length; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@images[i]" class="d-block w-100" alt="Product Image">
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#productImagesCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#productImagesCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>
</div>
